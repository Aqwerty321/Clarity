# ======================
# Auth0 Configuration
# ======================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id_here
AUTH0_CLIENT_SECRET=your_client_secret_here
AUTH0_AUDIENCE=https://clarity-api

# Frontend Auth0 (same as above, but exposed to frontend)
VITE_AUTH0_DOMAIN=your-tenant.auth0.com
VITE_AUTH0_CLIENT_ID=your_client_id_here
VITE_AUTH0_AUDIENCE=https://clarity-api
VITE_AUTH0_CALLBACK_URL=http://localhost:5173/callback

# ======================
# Local-First Architecture
# ======================
# Local AI Backend (REQUIRED - runs on your machine)
VITE_LOCAL_BACKEND_URL=http://localhost:5000

# Cloud Sync Service (OPTIONAL - for multi-device sync)
# Leave empty or comment out to run in local-only mode
VITE_SYNC_SERVICE_URL=
# VITE_SYNC_SERVICE_URL=https://clarity-sync.onrender.com

# ======================
# Local Backend Configuration
# ======================
LOCAL_BACKEND_HOST=0.0.0.0
LOCAL_BACKEND_PORT=5000
CLARITY_BASE_DIR=~/.clarity
CLARITY_CHUNK_SIZE=500
CLARITY_CHUNK_OVERLAP=100
EMBED_BATCH_SIZE=32

# Embedding model selection (nomic-embed-text or all-MiniLM-L6-v2)
EMBEDDING_MODEL=nomic-embed-text

# LLM Configuration (stub for gpt-oss or mock)
LLM_PROVIDER=mock
LLM_MODEL=gpt-oss
LLM_API_KEY=optional_key_here

# ======================
# Render Backend (Cloud Sync)
# ======================
RENDER_BACKEND_URL=https://your-app.onrender.com
DATABASE_URL=postgresql://user:password@host:5432/clarity_db

# ======================
# Optional Monitoring
# ======================
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project

# ======================
# Development
# ======================
DEBUG=true
LOG_LEVEL=INFO
